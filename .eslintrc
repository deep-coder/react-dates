{
  "root": true,

  "extends": [
    "airbnb",
    "plugin:react-with-styles/recommended",
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react-with-styles"
  ],

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "rules": {
    "react/forbid-foreign-prop-types": 0, // For babel-plugin-transform-react-remove-prop-types

    "jsx-a11y/click-events-have-key-events": 0, // TODO: enable

    "react/no-did-mount-set-state": 0, // necessary for server-rendering

    "react-with-styles/no-unused-styles": 0,

    "no-restricted-imports": 0, // TODO: enable with full RTL support

    "react/jsx-one-expression-per-line": 0, // TODO: enable once fixed upstream
    // "react/prop-types":0,
    // "react/default-props-match-prop-types":0,
    // "no-console":0,
    // "no-unused-vars":0,
     "jsx-a11y/no-static-element-interactions":0,
    // "react/destructuring-assignment":0,
    // "indent":0,
    // "no-trailing-spaces":0,
    // "comma-dangle":0,
    // "object-curly-newline":0,
    // "react/sort-comp":0,
    // "react/jsx-filename-extension":0,
    // "react/no-access-state-in-setstate":0,
    // "react/jsx-indent":0,
    // "react/jsx-closing-tag-location":0,
    // "lines-between-class-members":0,
    // "quotes":0,
    "jsx-a11y/no-noninteractive-element-interactions":0,
    // "class-methods-use-this":0,
    // "no-plusplus":0,
    // "no-return-assign":0,
    // "no-param-reassign":0,
    // "space-before-blocks":0,
    // "max-len":0,
    // "key-spacing":0
  },

  "settings": {
    "propWrapperFunctions": ["forbidExtraProps", "exact", "Object.freeze"],
  }
}
